<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>GerenciarFuncionario</servlet-name>
        <servlet-class>controle.GerenciarFuncionario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GerenciarMensalista</servlet-name>
        <servlet-class>controle.GerenciarMensalista</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SuporteServlet</servlet-name>
        <servlet-class>controle.SuporteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GerenciarVaga</servlet-name>
        <servlet-class>controle.GerenciarVaga</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GerenciarSetor</servlet-name>
        <servlet-class>controle.GerenciarSetor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValidaLogin</servlet-name>
        <servlet-class>controle.ValidaLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GerenciarAcesso</servlet-name>
        <servlet-class>controle.GerenciarAcesso</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GerenciarFuncionario</servlet-name>
        <url-pattern>/gerenciar_funcionario.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GerenciarMensalista</servlet-name>
        <url-pattern>/gerenciar_mensalista.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SuporteServlet</servlet-name>
        <url-pattern>/enviar_email.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GerenciarVaga</servlet-name>
        <url-pattern>/gerenciar_vaga.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GerenciarSetor</servlet-name>
        <url-pattern>/gerenciar_setor.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidaLogin</servlet-name>
        <url-pattern>/valida_login.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GerenciarAcesso</servlet-name>
        <url-pattern>/gerenciar_acesso.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
